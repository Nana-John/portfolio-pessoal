{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "rules": {
    "semi": ["error", "never"], // Remove ponto e vírgula
    "quotes": ["error", "single"], // Usa aspas simples
    "no-unused-vars": "warn", // Mostra aviso para variáveis não usadas
    "react/prop-types": "off", // Desativa verificação de prop-types no React
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
